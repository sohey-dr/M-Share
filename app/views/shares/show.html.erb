<div class="show-top">
  <%= image_tag @share.user.profile_img.url, class:'profile_img2' %>
  <%= link_to @share.user.name, user_path(@share.user) %>
</div>  
<div class="">
  <div class="">
    <% if @share.img? %>
      <%= image_tag @share.img.url, :size =>'200x200', class:'show-img' %>
    <% else %>
      <%= image_tag 'music.png', :size =>'200x200', class:'show-img' %>
    <% end %>
  </div>
  <div class="">
    <%= @share.artist_name %>
    <%= @share.music_name %>
  </div>
</div>
<div>
  <div class="line mb-2"></div>
  <div>
   <div>
    <% if current_user == @share.user %>
      <%= link_to @share, data: { confirm: "本当に削除しますか?" }, :method => :delete do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
   </div>
  </div>
  <div class="line mt-2"></div>
</div>
<%= render 'comments/comments'%>
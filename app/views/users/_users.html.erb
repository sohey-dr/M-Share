<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.profile_img? %>
          <%= image_tag user.profile_img.url, :size =>'320x480', class:'card-img' %>
        <% else %>
          <%= image_tag 'music.png', :size =>'320x480', class:'card-img' %>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
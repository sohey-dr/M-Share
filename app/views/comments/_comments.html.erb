<div class="comment-wrapper border-top">
  <% @comments.each do |c| %>
    <div class="comment">
      <div>
        <% if c.user.profile_img? %>
         <%= link_to user_path(c.user) do %>
          <%= image_tag c.user.profile_img.url, class:'comment_image mr-3' %>
         <% end %>
        <% else %>
         <%= link_to user_path(c.user) do %>
          <%= image_tag 'music.png', class:'comment_image mr-3' %>
         <% end %>
        <% end %>
      </div>
      <div>
        <p class="comment-name"><%= c.user.name %></p>
        <p class="comment-content"><%= c.content %></p>
      </div>
    </div>
    <div>
      <% if current_user == c.user %>
        <%= link_to comment_url(c), data: { confirm: "本当に削除しますか?" }, :method => :delete do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      <% end %>
    </div>
    <div class="line"></div>
  <% end %>
  <% if logged_in? %>
    <%= form_with(model: [@share, @comment], local: true) do |f| %>
      <%= f.text_area :content, class: "form-control", rows: 5 %>
      <%= f.hidden_field :share_id, value: @share.id %>
      <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
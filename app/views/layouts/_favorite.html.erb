<% if Favorite.find_by(user_id: current_user.id, share_id: @share.id) %>
  <%= link_to "/shares/#{@share.id}/favorites", method: :delete, remote: true do %>
  <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to "/shares/#{@share.id}/favorites", method: :post, remote: true do %>
  <i class="far fa-heart"></i>
  <% end %>
<% end %>
<%= @share.favoes.length %>